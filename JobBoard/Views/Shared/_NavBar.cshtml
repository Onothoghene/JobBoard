                        <a class="btn btn-primary border-width-2 d-none d-lg-inline-block btn-md" asp-action="Authentication" asp-controller="Account"><span class="mr-2 icon-lock_outline"></span>Log In</a>

                    </div>
                    <a href="#" class="site-menu-toggle js-menu-toggle d-inline-block d-xl-none mt-lg-2 ml-3"><span class="icon-menu h3 m-0 p-0 mt-2"></span></a>
                </div>
            </div>
        </div>

