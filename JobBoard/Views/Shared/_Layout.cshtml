<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobBoard</title>

    <link href="~/Styles/custom-bs.css" rel="stylesheet" />
    <link href="~/Styles/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/Styles/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Styles/icomoon/style.css" rel="stylesheet" />
    <link href="~/Styles/line-icons/style.css" rel="stylesheet" />
    <link href="~/Styles/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Styles/animate.min.css" rel="stylesheet" />
    <link href="~/Styles/quill.snow.css" rel="stylesheet" />
    <link href="~/Styles/style.css" rel="stylesheet" />
    <link href="~/toastr/toastr.css" rel="stylesheet" />
    <link href="~/toastr/toastr.min.css" rel="stylesheet" />
</head>
<body id="top">

    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <partial name="_NavBar" />

        @RenderBody()

        <partial name="_Footer" />
    </div>

    <script src="~/Styles/js/jquery.min.js"></script>
    <script src="~/Styles/js/bootstrap.bundle.min.js"></script>
    <script src="~/Styles/js/isotope.pkgd.min.js"></script>
    <script src="~/Styles/js/stickyfill.min.js"></script>
    <script src="~/Styles/js/jquery.fancybox.min.js"></script>
    <script src="~/Styles/js/jquery.easing.1.3.js"></script>

    <script src="~/Styles/js/jquery.waypoints.min.js"></script>
    <script src="~/Styles/js/jquery.animateNumber.min.js"></script>
    <script src="~/Styles/js/owl.carousel.min.js"></script>
    <script src="~/Styles/js/quill.min.js"></script>

    <script src="~/Styles/js/bootstrap-select.min.js"></script>

    <script src="~/Styles/js/custom.js"></script>
    <script src="~/toastr/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
